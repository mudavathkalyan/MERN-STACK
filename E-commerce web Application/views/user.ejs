    <div class="container1 flex flex-col items-center justify-center mt-4 " id="container1">
        <div class="buttons mb-4">
            <button id="signUpBtn" class="bg-blue-500 text-white px-4 py-2 rounded-lg focus:outline-none hover:bg-blue-600 transition mr-6">Sign Up</button>
            <button id="logInBtn" class="bg-gray-500 text-white px-4 py-2 rounded-lg focus:outline-none hover:bg-gray-600 transition">Log In</button>
        </div>
        <div class="form-container w-full max-w-md mx-auto transition-transform duration-300 ease-in-out" id="form">
            <div class="form sign-up-form">
                <form action="/users/register" method="post">
                    <label for="username" class="block text-gray-700">Username</label>
                    <input type="text" id="username" name="fullname" class="block w-full p-2 border border-gray-300 rounded-lg mb-4" />
                    <label for="email" class="block text-gray-700">Email</label>
                    <input type="email" id="email" name="email" class="block w-full p-2 border border-gray-300 rounded-lg mb-4"/>
                    <label for="password" class="block text-gray-700">Password</label>
                    <input type="password" id="password" name="password" class="block w-full p-2 border border-gray-300 rounded-lg mb-4"/>
                    <input class="submit1 bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition w-32 " type="submit" value="Sign In">
                </form>
            </div>
            <div class="form login-form hidden">
                <form action="/users/login" method="post">
                    <label for="email" class="block text-gray-700">Email</label>
                    <input type="email" id="loginEmail" name="email" class="block w-full p-2 border border-gray-300 rounded-lg mb-4"/>
                    <label for="password" class="block text-gray-700">Password</label>
                    <input type="password" id="loginPassword" name="password" class="block w-full p-2 border border-gray-300 rounded-lg mb-4"/>
                    <input class="submit1 bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition" type="submit" value="Login">
                </form>
            </div>
        </div>
    </div>
    
    </div>
<script>

document.addEventListener("DOMContentLoaded", function() {
    const signUpBtn = document.getElementById("signUpBtn");
    const logInBtn = document.getElementById("logInBtn");
    const signUpForm = document.querySelector(".sign-up-form");
    const loginForm = document.querySelector(".login-form");
    
    signUpBtn.addEventListener("click", function() {
        signUpForm.classList.remove("hidden");
        loginForm.classList.add("hidden");
    });
    
    logInBtn.addEventListener("click", function() {
        loginForm.classList.remove("hidden");
        signUpForm.classList.add("hidden");
    });
});


    // Toggle visibility for container
    let login = document.getElementById("loginnavbtn");
    let container = document.querySelector(".container1");

    login.addEventListener("click", function(event) {
        event.preventDefault();  // Prevents default anchor behavior
        // Toggle visibility of the container
        if (container.style.display === "none" || container.style.display === "") {
            container.style.display = "block"; // Show container
        } else {
            container.style.display = "none";  // Hide container
        }

});
    </script>

