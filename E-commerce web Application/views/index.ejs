<%- include('partials/header') %>


<div class="main-content">
    <section class="imgcontainer" id="home">
        <div class="sliderwrapper shadow-2xl">
            <div class="slide">
                <img id="slide1" class="w-full h-full object-cover" src="/images/colorful-kitted-bags-by-window.jpg" alt="bag 1">
                <img id="slide2" src="/images/deal3.png" alt="bag 2">
                <img id="slide3" src="/images/image 80.png" alt="Home image">
                <img id="slide4" src="/images/office.jpeg" alt="bag 3">
                <img id="slide6" src="/images/office2.jpeg" alt="bag 5">
                <img id="slide5" src="/images/school1.png" alt="bag 4">
            </div>
            <div class="slidenav">
                <a href="#slide1"></a>
                <a href="#slide2"></a>
                <a href="#slide3"></a>
                <a href="#slide4"></a>
                <a href="#slide5"></a>
                <a href="#slide6"></a>
            </div>
        </div>
    </section>

   

    <div class="container1 hidden" id="container1" style="display: none;">
        <div class="formContainer" id="form">
            <div class="form text-center bg-[#b6b6b0] border-1 border-gray-400">
                <h3 class="text-black" >Please Select User Type</h3>
                <form action="/users">
                    <input class="submit1" type="submit" value="Customer">
                </form>
                <form action="/owners">
                    <input class="submit1" type="submit" value="Owner">
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const login = document.getElementById("loginnavbtn");
    const container = document.getElementById("container1");

    if (login && container) {
        login.addEventListener("click", function(event) {
            event.preventDefault();  
            container.style.display = container.style.display === "none" || container.style.display === "" ? "block" : "none";
        });
    }
});
</script>

